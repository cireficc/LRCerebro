<h1>Listing standard_reservations</h1>

table.table
  thead
    tr
        th Activity
        th Start
        th End
        th Lab
        th Walkthrough
  tbody
    - @standard_reservations.each do |sa|
      tr
        td #{sa.activity.titleize}
        td #{sa.start}
        td #{sa.end}
        td #{sa.lab.titleize}
        td #{sa.walkthrough? ? "Yes" : "No"}
        td
            = link_to 'Show', sa
        td
            = link_to 'Edit', edit_standard_reservation_path(sa)
        td
            = link_to 'Destroy', sa, method: :delete, data: { confirm: 'Are you sure?' }
br

= link_to 'New reservation', new_standard_reservation_path
